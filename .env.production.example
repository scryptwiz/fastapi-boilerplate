# Example .env file for production environment
ENVIRONMENT=production

# Application Settings
APP_NAME=FastAPI Demo Production
APP_DESCRIPTION=Production FastAPI demonstration application
APP_VERSION=1.0.0

# Database configuration
POSTGRES_HOST=prod-db-server.example.com
POSTGRES_PORT=5432
POSTGRES_DB=fastapi_prod
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_URL=postgresql://fastapi_user:your_secure_password_here@prod-db-server.example.com:5432/fastapi_prod

# Redis configuration
REDIS_HOST=prod-redis.example.com
REDIS_PORT=6379

# Logging configuration
LOG_LEVEL=info

# API configuration
API_BASE_URL=https://api.yourapp.com/api

# Security configuration
SECRET_KEY=your_super_secure_secret_key_here

# Feature flags
FEATURE_X_ENABLED=true

# Email configuration
EMAIL_HOST=smtp.yourapp.com
EMAIL_PORT=587
