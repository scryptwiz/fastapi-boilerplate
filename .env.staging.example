# Example .env file for staging environment
ENVIRONMENT=staging

# Application Settings
APP_NAME=FastAPI Demo Staging
APP_DESCRIPTION=Staging FastAPI demonstration application
APP_VERSION=1.0.0

# Database configuration
POSTGRES_HOST=staging-db.example.com
POSTGRES_PORT=5432
POSTGRES_DB=fastapi_staging
POSTGRES_USER=fastapi_user
POSTGRES_PASSWORD=staging_password
POSTGRES_URL=postgresql://fastapi_user:staging_password@staging-db.example.com:5432/fastapi_staging

# Redis configuration
REDIS_HOST=staging-redis.example.com
REDIS_PORT=6379

# Logging configuration
LOG_LEVEL=debug

# API configuration
API_BASE_URL=https://staging-api.yourapp.com/api

# Security configuration
SECRET_KEY=staging_secret_key

# Feature flags
FEATURE_X_ENABLED=false

# Email configuration
EMAIL_HOST=smtp.staging.yourapp.com
EMAIL_PORT=587
